# Environment Configuration Example
# Copy this file to .env and update the values for your environment

# Application Settings
NODE_ENV=development
PORT=3001
DEFAULT_LANGUAGE=en

# Database Configuration
DATABASE_URL=sqlite:///app/data/raally.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://username:password@host:port/database

# JWT Settings
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=raally123

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=raally-app

# Email Configuration (Optional)
EMAIL_FROM=noreply@raally.com
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASS=your-app-password

# AWS Configuration (Production)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Production Database (RDS)
# DATABASE_URL=postgresql://raally:password@raally-prod-database.region.rds.amazonaws.com:5432/raally

# Production Redis (ElastiCache)
# REDIS_URL=redis://raally-prod-redis.cache.amazonaws.com:6379

# Production Kafka (MSK)
# KAFKA_BROKERS=b-1.raally-prod-kafka.region.kafka.us-west-2.amazonaws.com:9092,b-2.raally-prod-kafka.region.kafka.us-west-2.amazonaws.com:9092

# Security Settings
CORS_ORIGIN=http://localhost:3000
HELMET_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
HEALTH_CHECK_TIMEOUT=5000
